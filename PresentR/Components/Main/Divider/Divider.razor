@namespace PresentR.Components
@inherits PresentrComponent

<div @attributes="@AdditionalAttributes" class="@ClassString">
    <div class="@TextClassString">
        @if (!string.IsNullOrEmpty(Icon))
        {
            <i class="@Icon"></i>
        }
        @if (!string.IsNullOrEmpty(Text))
        {
            <span>@Text</span>
        }
        @ChildContent
    </div>
</div>
